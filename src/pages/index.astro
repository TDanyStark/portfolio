---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Hero from "../sections/Hero.astro";
import Background1 from "../components/Background1.astro";
import About from "../sections/About.astro";
import Lottie from "../components/Lottie.astro";
import { HeaderData, HeroData, AboutData, ExperienceData, ProjectsData, SkillsData, ContactData, FooterData } from "../data/portafolio-es.ts";
import Experiencia from "../sections/Experience.astro";
import Projects from "../sections/Projects.astro";
import Skills from "../sections/Skills.astro";
import Contact from "../sections/Contact.astro";
import Footer from "../sections/Footer.astro";
import Gostart from "../components/Gostart.astro";
---

<Layout title="Daniel Amado - Portafolio" lang="es">
  <Background1 />
  <Header headerData={HeaderData} />
  <main class="overflow-clip p-3 lg:p-0">
    <div class="max-w-[1200px] mx-auto">
      <Hero heroData={HeroData} />
      <!-- <Lottie /> -->
      <About aboutData={AboutData} />
      <Experiencia experienceData={ExperienceData} />
      <Projects projectsData={ProjectsData} />
      <Skills skillsData={SkillsData} />
      <Contact contactData={ContactData}  />
      <Footer footerData={FooterData} />
    </div>
  </main>
  <Gostart />

</Layout>

<style is:global>
  @keyframes translate-up {
    0% {
      opacity: 0;
      transform: translateY(60px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
