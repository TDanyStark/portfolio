---
import type { FooterDataType } from "../types.ts";

export interface Props {
  footerData: FooterDataType;
}

const { footerData } = Astro.props;
---

<section id="footer" class="border-t border-gray-700/50 py-4 lg:py-6">
  <div class="flex flex-col lg:flex-row justify-center items-center gap-8">
    <div class="text-center">
      <p class="text-lg">{footerData.creditos}</p>
      <p class="text-sm">
        {footerData.comunidad}
        <a
          class="flex border border-gray-700 px-4 py-1 rounded-full w-fit mt-2 mx-auto hover:border-azul-cielo"
          href="https://github.com/TDanyStark/portfolio"
          target="_blank"
          rel="noopener noreferrer"
          >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="h-5 w-5"
            ><path
              d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
            ></path>
          </svg>
        </a>
      </p>
    </div>
  </div>
</section>
