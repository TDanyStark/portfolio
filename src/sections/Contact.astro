---
import type { ContactDataType } from "../types.ts";

export interface Props {
  contactData: ContactDataType;
}

const { contactData } = Astro.props;
---

<section id="contact" class="spacing-md">
    <div class="card-contact bg-gradient-to-r from-blue-900 to-azul-cielo text-white p-8 lg:p-24 rounded-3xl flex relative ">
      <div class="space-y-6 bg-slate-100/10 backdrop-blur-xl p-4 lg:p-8 rounded-3xl">
        <h2 class="text-2xl lg:text-4xl font-bold text-pretty">
          {contactData.copy}
        </h2>
        <a class="py-3 px-8 bg-gray-900 flex items-center w-fit group text-xl rounded-full" href={"mailto:"+ contactData.email}>
          {contactData.callToAction}
          <svg
          class="h-5 w-5 transition mt-0.5 translate-x-1 group-hover:translate-x-2"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
            clip-rule="evenodd"></path>
        </svg>
        </a>
      </div>

    </div>
</section>

<style>
  .card-contact::before{
    content: '';
    position: absolute;
    inset: 0;
    background: url('/img/contact.webp') no-repeat;
    background-size: contain;
    background-position: right bottom;
  }
</style>