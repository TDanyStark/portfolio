---
interface Props {
	title: string;
	lang: string;
}

const { title, lang } = Astro.props;
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<meta name="author" content="Daniel Amado" />
		<title>{title}</title>
		<meta name="theme-color" content="#0B1120">
		<meta name="description" content="Daniel Amado, desarrollador fullstack, crea soluciones web innovadoras y eficientes, destacando en frontend y backend con pasión por la tecnología y el código limpio." />
		<link rel="preload" href="img/bg.webp" as="image">

		<!-- og-image -->
		<meta property="og:image" content="https://indigo-skunk-882856.hostingersite.com/img/og_daniel.jpg" />
	</head>
	<body class="bg-gray-900 font-sans text-white min-h-screen scroll-beha">
		<slot />
	</body>
</html>