---
import "../css/style.css";
interface Props {
  title: string;
  lang: string;
}

const { title, lang } = Astro.props;
---

<!doctype html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="author" content="Daniel Amado" />
    <title>{title}</title>
    <meta name="theme-color" content="#111827" />
    <meta
      name="description"
      content={lang === "es"
        ? "Desarrollador full Stack con 3 años en IT. Apasionado por el frontend, backend, automatización y AI. Resuelve problemas con soluciones creativas y eficientes."
        : "Full Stack developer with 3 years in IT. Passionate about frontend, backend, automation, and AI. Solves problems with creative and efficient solutions."}
    />
    <link rel="preload" href="/img/bg.webp" as="image" />
    
    <!-- Hreflang tags for internationalization -->
    <link rel="alternate" hreflang="es" href="https://danielamado.com/" />
    <link rel="alternate" hreflang="en" href="https://danielamado.com/en" />
    <link rel="alternate" hreflang="x-default" href="https://danielamado.com/" />

    <!-- Open Graph meta tags -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={lang === "es"
      ? "Desarrollador full Stack con 3 años en IT. Apasionado por el frontend, backend, automatización y AI. Resuelve problemas con soluciones creativas y eficientes."
      : "Full Stack developer with 3 years in IT. Passionate about frontend, backend, automation, and AI. Solves problems with creative and efficient solutions."} />
    <meta property="og:url" content={`https://danielamado.com${lang === 'en' ? '/en' : ''}`} />
    <meta property="og:site_name" content={`Daniel Amado - ${lang === 'es' ? 'Portafolio' : 'Portfolio'}`} />
    <meta
      property="og:image"
      content={`https://danielamado.com/img/og_daniel_${lang}.jpg`}
    />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    
    <!-- Twitter Card meta tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={lang === "es"
      ? "Desarrollador full Stack con 3 años en IT. Apasionado por el frontend, backend, automatización y AI. Resuelve problemas con soluciones creativas y eficientes."
      : "Full Stack developer with 3 years in IT. Passionate about frontend, backend, automation, and AI. Solves problems with creative and efficient solutions."} />
    <meta name="twitter:image" content={`https://danielamado.com/img/og_daniel_${lang}.jpg`} />
    <link rel="preload" href="/img/bg.webp" as="image" />

    <!-- Additional SEO meta tags -->
    <meta name="robots" content="index, follow" />
    <meta name="language" content={lang === "es" ? "Spanish" : "English"} />
    <!-- Google tag (gtag.js) -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-LZSQT7F4XV"
    ></script>
    <script is:inline async>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-LZSQT7F4XV");
    </script>
  </head>
  <body class="bg-gray-900 font-sans text-white min-h-screen">
    <slot />
  </body>
</html>

<style is:global>
  .fade-in {
    animation: show linear both;
    animation-timeline: view();
    animation-range: entry 18% cover 25%;
  }

  @keyframes show {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
