---
interface Props {
  url: string;
  title: string;
}

const { url, title } = Astro.props;
---

<a
  href="#"
  class="rounded-full py-1 px-3
      bg-gradient-to-r from-zinc-100 to-zinc-300 hover:from-zinc-50 hover:to-zinc-50
      shadow-zinc-200 shadow-none hover:shadow-lg
      border border-zinc-900 hover:border-zinc-600
      transition-all"
>
  <div class="text-gray-900 font-medium text-lg w-full text-center flex items-center ">
    <slot />
    {title}
  </div>
</a>
